{
  "name": "scanic",
  "version": "1.0.4",
  "description": "Modern document scanner in pure JavaScript and Wasm",
  "type": "module",
  "main": "dist/scanic.umd.cjs",
  "module": "dist/scanic.js",
  "types": "src/scanic.d.ts",
  "exports": {
    ".": {
      "types": "./src/scanic.d.ts",
      "import": "./dist/scanic.js",
      "require": "./dist/scanic.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:gh-pages": "vite build && cp index.html dist/ && cp -r src dist/ && cp -r testImages dist/ && cp -r public/* dist/ 2>/dev/null || true",
    "build:wasm": "docker compose -f dev/docker-compose.yml up --build",
    "test": "vitest run",
    "test:watch": "vitest",
    "preview": "vite preview",
    "prepublishOnly": "npm run build",
    "release": "node scripts/release.js"
  },
  "keywords": [
    "document",
    "scanner",
    "image",
    "processing",
    "contour",
    "detection"
  ],
  "author": "marquaye",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/marquaye/scanic.git"
  },
  "homepage": "https://github.com/marquaye/scanic",
  "bugs": {
    "url": "https://github.com/marquaye/scanic/issues"
  },
  "files": [
    "dist/scanic.js",
    "dist/scanic.umd.cjs",
    "src/scanic.d.ts",
    "wasm_blur/pkg/wasm_blur_bg.wasm",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "canvas": "^3.2.0",
    "jsdom": "^27.4.0",
    "terser": "^5.44.1",
    "vite": "^6.3.4",
    "vitest": "^4.0.16"
  }
}
